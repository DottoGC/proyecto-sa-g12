
<%- include("partials/_header") %>

<div class="container mt-5">
    <div class="row">
      <div class="col-md-7">
        <table class="table table-bordered table-hover">
          <thead>
            <tr>
              <td>nÂ°</td>
              <td>ID</td>
              <td>Nombres</td>
              <td>Apellidos</td>
              <td>Actions</td>
            </tr>
          </thead>
          <tbody>
            <% if (data) { %>
              <% for(var i = 0; i < data.length; i++) { %>
                <tr>
                  <td><%= (i + 1) %></td>
                  <td><%= data[i].id %></td>
                  <td><%= data[i].nombres %></td>
                  <td><%= data[i].apellidos %></td>
                  <td>
                    <a href="/update/<%= data[i].id %>" class="btn btn-info">Edit</a>
                    <a href="/delete/<%= data[i].id %>" class="btn btn-danger">Delete</a>
                  </td>
                </tr>
              <% } %>
            <% } %>
          </tbody>
        </table>
      </div>
      <div class="col-md-5">
        <div class="card-body">
  
          <form action="/add" method="POST">
            <div class="form-group">
              <input type="text" name="nombres" placeholder="Nombres" class="form-control" autofocus>
            </div>
            <div class="form-group">
              <input type="text" name="apellidos" placeholder="Apellidos" class="form-control">
            </div>
            <div class="form-group">
              <input type="password" name="password" placeholder="Password" class="form-control">
            </div> 
            <div class="form-group">
                <input type="text" name="administrador" placeholder="Administrador" class="form-control">
            </div>                     
            
            
            <button type="submit" class="btn btn-primary">
              save customer
            </button>
          </form>
        </div>
      </div>
    </div>
  </div>



<%- include("partials/_footer") %>
